<h1>Edit Your List</h1>
<%= form_for @list do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter Title" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>
<% @items.each do |item| %>
<%= form_for [@list, item] do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class:"form-control", placeholder: "Enter Todo Item" %>
  </div>
  <div class="form-group" >
    <%= f.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>
<% end %>
